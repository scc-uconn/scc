
.Phony: setup submit check data clean reset

# Organize directory
setup:
	mkdir err log out rdata

# Submit job to cluster
submit:
	condor_submit demo.condor

# Check jobs running for user `hlinder`
check:
	condor_q hlinder

# Organize output of cluster runs
data:
	mv *.Rdata rdata/
	Rscript combine.R

# Remove all files generated by the condor run
clean:
	rm err/* log/* out/* rdata/* *.Rdata

# Remove directory structure
reset:
	rm -r err log out rdata

